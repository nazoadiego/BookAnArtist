<div class="full-height">
  <div class="row">
    <div class="yellow-background col-5 full-height d-flex flex-column align-items-center justify-content-center">
      <h1 class="roboto-mono"> <%= @offer.artist_name.upcase %></h1>
      <h1 class=" roboto-mono">BOOKING</h1>
    </div>
    <div class="black-background col-7 full-height d-flex flex-column align-items-center justify-content-center">
      <h3 class="yellow-title">Message:</h3>
      <p class="white-text center-text"><%= @booking.message %></p>
      <h3 class="yellow-title">Date:</h3>
      <p class="white-text">Start Time: <%= @booking.start_time %></p>
      <h4>End Time: <%= @booking.end_time %></h4>
      <h3 class="yellow-title">Total Price:</h3>
      <h4>â‚¬<%= number_with_precision(@booking.total, :precision => 2, :delimiter => '.', :separator => ',') %></h4>
      <h2 class="yellow-title">Status:</h2>
      <% if @booking.status = 'pending' %>
        <div class="yellow-neon-button" id="status-btn">
          <a>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Pending
          </a>
        </div>
      <% else %>
        <div class="neon-button" id="status-btn">
          <a>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Accepted
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
