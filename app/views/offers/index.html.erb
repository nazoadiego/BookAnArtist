
<div class="container">
  <h1>Artists to Book</h1>
    <div class="row justify-content-evenly">
      <% @offers.each do |offer| %>
          <div class="col-12 col-md-6 col-lg-4 col-lx-3">
            <div class="card">
              <img class="card-img-top" src="https://images.unsplash.com/photo-1517230878791-4d28214057c2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1769&q=80" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title btn btn-outline-primary"><%= link_to offer.artist_name, offer_path(offer) %></h5>
              </div>
            <div>
            </div>
          </div>
    </div>
    <% end %>
</div>

<p><%= link_to 'Create a new offer', new_offer_path %></p>
