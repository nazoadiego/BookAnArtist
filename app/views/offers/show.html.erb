<div class="modal-body row align-items-end d-flex align-items-center">
  <div class="col-md-5">
    <% @offer.photos.each do |photo| %>
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path photo.key, height: 300, width: 400, crop: :fill %>');">
      </div>
    <% end %>
  </div>
  <div class="col-md-7 align-self-center">
    <div class="d-flex align-content-around flex-wrap m-3">
      <h1><%= @offer.artist_name  %></h1>
    </div>
    <div class="d-flex align-content-around flex-wrap m-3">
      <p><%= @offer.description  %></p>
    </div>
    <div class="d-flex align-content-around flex-wrap m-3">
    <div class="neon-button">
      <a data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        Book now
      </a>
    </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Book <%= @offer.artist_name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@offer, @booking] do |f| %>

          <div class="form-inputs">
            <%= f.input :start_time, :as => :datetime %>
            <%= f.input :end_time, :as => :datetime %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.button :submit, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
