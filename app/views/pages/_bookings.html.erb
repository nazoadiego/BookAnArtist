
<div class="overflow-x-auto hidden sm:block">
  <table class="table w-full">
    <thead>
      <tr>
        <th></th>
        <th>Artist:</th>
        <th>Status:</th>
        <th>Start Time:</th>
        <th>End Time:</th>
        <th>Total Price:</th>
      </tr>
    </thead>
    <tbody>
      <% @profile_user.user_bookings.each do |booking| %>
        <tr>
          <th></th>
          <td><%= booking.offer.artist_name %></td>
          <td><%= booking.status %></td>
          <td><%= booking.start_time.to_time.strftime('%B %e %l:%M %p') %></td>
          <td><%= booking.end_time.to_time.strftime('%B %e %l:%M %p') %></td>
          <td><%= number_with_precision(booking.total, :precision => 2, :delimiter => '.', :separator => ',') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="sm:hidden">
  <% @profile_user.user_bookings.each do |booking| %>
    <h2 class="mt-8">Artist: <%= booking.offer.artist_name %></h2>
    <h4>Status: <%= booking.status %></h4>
    <h4>Start Time: <%= booking.start_time.to_time.strftime('%B %e %l:%M %p') %></h4>
    <h4>End Time: <%= booking.end_time.to_time.strftime('%B %e %l:%M %p') %></h4>
    <h4>Total Price: <%= number_with_precision(booking.total, :precision => 2, :delimiter => '.', :separator => ',') %></h4>
  <% end %>
</div>

