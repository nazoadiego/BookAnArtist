    <div class="green" id="dash-top" style="height: 70%">
      <div class="row" style="height: 70vh">
        <div class="red col-8" style="height: 100%">
          <div class="row d-flex flex-column flex-nowrap justify-content-stretch" style="height: 100%">
            <div class="blue" style="height: 25%">
              <h1>Dashboard</h1>
            </div>
            <div class="blue" style="height: 75%">
              <h2 class="ml-4">My Offers</h2>
              <%= render 'pages/posts' %>
            </div>
          </div>
        </div>
        <div class="red col-4" style="height: 100%">
          <h1>Profile</h1>
        </div>
      </div>
    </div>
    <div class="green" id="dash-bottom" style="height: 30%">
      <h1 style="height: 15%">Booking Requests</h1>
        <div style="height: 85%">
          <%= render 'pages/bookings' %>
        </div>
    </div>
  </div>
</div>
