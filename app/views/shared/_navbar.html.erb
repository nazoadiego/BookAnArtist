<%# DaisyUI navbar %>

<div class="navbar mb-2 shadow-lg bg-neutral text-neutral-content rounded-box">
  <div class="px-2 mx-2 navbar-start">
    <span class="text-lg">
            <%= link_to "/", class: "navbar-brand", id: "logo" do %>
              Book An Artist
            <% end %>
          </span>
  </div>
  <div class="hidden px-2 mx-2 navbar-center lg:flex">
    <div class="flex items-stretch">
      <%= link_to "/offers", class: "transition hover:text-cyan-400" do %>
              <h3>Artists</h3>
            <% end %>
      <%= link_to "/profile", class: "transition hover:text-cyan-400 mx-4" do %>
              <h3>Dashboard</h3>
            <% end %>
      <a href="#">
              <h3>Categories</h3>
            </a>
    </div>
  </div>
  <div class="navbar-end">
    <%= form_tag offers_path, method: :get, class: 'search-form' do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control rounded-xl mr-2",
      style: "color: black",
      placeholder: "Find an artist"
    %>
    <%= submit_tag "Search", class: "mr-2 py-3 px-6 rounded-xl bg-cyan-500 transition hover:bg-cyan-600 focus:bg-cyan-700 active:bg-cyan-800" %>
    <% end %>
    <button class="btn btn-square btn-ghost">
      <i class="fas fa-sign-out-alt"></i>
    </button>
  </div>
</div>
